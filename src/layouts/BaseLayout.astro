---
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
}

const { title } = Astro.props
---

<html class="dark" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="relative min-h-screen dark:bg-zinc-900 dark:text-gray-100">
    <div
      class="absolute inset-0 -z-10 opacity-25 dark:bg-[url('/bg-img-dark.svg')]"
    >
    </div>

    <div
      transition:animate="fade"
      class="mx-auto w-[min(50rem,calc(100%-2rem))]"
    >
      <slot />
    </div>
  </body>
</html>
