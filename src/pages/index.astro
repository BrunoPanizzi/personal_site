---
import LanguageList from "../components/LanguageList.astro"
import BaseLayout from "../layouts/BaseLayout.astro"
---

<BaseLayout title="Bruno Panizzi">
  <div class="grid min-h-screen place-items-center">
    <div
      class="w-min max-w-md rounded-sm border border-zinc-800/50 bg-zinc-800/40 p-4 shadow backdrop-blur"
    >
      <header class="mb-4">
        <h1 class="font-mono text-2xl font-semibold">Bruno Panizzi</h1>
        <p class="dark:text-zinc-300/90">
          Desenvolvedor de Software e apaixonado por tecnologia
        </p>
      </header>

      <div class="mb-6 flex gap-1">
        <LanguageList
          langs={["TypeScript", "Remix", "Go", "Postgres", "Tailwind"]}
        />
      </div>

      <footer>
        <ul class="flex gap-4">
          <li
            class="underline transition-colors dark:text-blue-100 dark:hover:text-blue-200"
          >
            <a href="/projects">Projetos</a>
          </li>
          <li
            class="underline transition-colors dark:text-blue-100 dark:hover:text-blue-200"
          >
            <a href="/blog">Blog</a>
          </li>
          <li
            class="underline transition-colors dark:text-blue-100 dark:hover:text-blue-200"
          >
            <a href="https://github.com/BrunoPanizzi">Github</a>
          </li>
          <li
            class="underline transition-colors dark:text-blue-100 dark:hover:text-blue-200"
          >
            <a href="https://www.linkedin.com/in/brunopanizzi"> LinkedIn </a>
          </li>
        </ul>
      </footer>
    </div>
  </div>
</BaseLayout>
